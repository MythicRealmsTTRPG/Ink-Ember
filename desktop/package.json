{
  "name": "ink-ember-desktop",
  "version": "0.5.0",
  "private": true,
  "main": "main.js",
  "dependencies": {
    "ink-ember-root": "file:..",
    "wait-on": "^7.2.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3"
  },
  "scripts": {
    "dev": "cross-env INK_EMBER_DEV=1 electron .",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "studio.scalescribe.inkember",
    "productName": "Ink & Ember",
    "directories": {
      "output": "../dist"
    },
    "files": [
      "**/*"
    ],
    "extraResources": [
      {
        "from": "../backend/dist",
        "to": "backend",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "artifactName": "Ink-Ember-${version}-Setup.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
